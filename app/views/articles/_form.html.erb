<div class="container">
  <%= form_with model: article, class: 'needs-validation', novalidate: true do |form| %>
    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", required: true %>
          <% article.errors.full_messages_for(:title).each do |message| %>
            <div class="invalid-feedback"><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="mb-3">
          <%= form.label :body, class: "form-label" %>
          <%= form.text_area :body, class: "form-control", rows: 5, required: true %>
          <% article.errors.full_messages_for(:body).each do |message| %>
            <div class="invalid-feedback"><%= message %></div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="mb-3 form-check">
          <%= form.check_box :published, class: "form-check-input" %>
          <%= form.label :published, class: "form-check-label" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>


